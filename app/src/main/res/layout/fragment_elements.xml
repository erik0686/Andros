<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="itesm.mx.andros.SectionsActivity">

    <FrameLayout
        android:id="@+id/display_equation"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/button_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:gravity="center"
        android:layout_gravity="center"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <TableRow>
            <TextView
                android:id="@+id/text_foco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foco: "
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/answer_foco"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="(x, y)"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="10pt"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/text_centro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro: "
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/answer_centro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="(x, y)"
                android:textStyle="italic"
                android:textSize="10pt"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/text_directriz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directriz: "
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/answer_directriz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="n"
                android:textStyle="italic"
                android:textSize="10pt"/>
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/text_distanciafocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distancia Focal: "
                android:textColor="#000000"
                android:textSize="10pt"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/answer_distanciafocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="n"
                android:textStyle="italic"
                android:textSize="10pt"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/text_ejemayor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eje Mayor: "
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/answer_ejemayor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="n"
                android:textStyle="italic"
                android:textSize="10pt"/>
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/text_ejemenor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directriz: "
                android:textColor="#000000"
                android:textSize="10pt"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/answer_ejemenor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="n"
                android:textStyle="italic"
                android:textSize="10pt"/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/image_figura"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"/>

</LinearLayout>
